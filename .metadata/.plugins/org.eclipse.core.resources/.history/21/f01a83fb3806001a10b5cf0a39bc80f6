class Factory {
	private String name;
	private String location;
	private int workerAmount;
	//private boolean isBankrupt = false;

	public Factory(String name, String location, int workerAmount) {
		this.name = name;
		this.location = location;
		this.workerAmount = workerAmount;
		// this.isBankrupt = isBankrupt;
		System.out.println("The The factory class is created ");
	}
}

class Employee {
	private String name;
	private int work;
	private int salary;
	private int totalMoney;
	//private boolean leftJob;

	public Employee(String name, int work, int salary, int totalMoney) {
		this.name = name;
		this.work = work;
		this.salary = salary;
		this.totalMoney = totalMoney;
	}
	
	public Employee(String name, int work, int salary) {
		this.name = name;
		this.work = work;
		this.salary = salary;
	}

	public void setName(String name) {
		this.name = name;
	}
	public String getName() {
		return name;
	}
	public int getSalary() {
		return salary;
	}
	public int getWork() {
		return work;
	}
	public void setTotalMoney() {
		this.totalMoney = totalMoney;
	}
	public int getTotalMoney() {
		return totalMoney;
	}
	
	//public boolean leftJob(){
	//	return leftJob;
	//}
	
	void recieveSalary(int salary) {
		totalMoney = totalMoney + salary;
		System.out.println("Worker " + name +  ", got salary "
				+ salary );   // why do not sums totalMoney
	}
	
	
	public String printStatus() {
		totalMoney = totalMoney + salary;
		return "Worker " + name + " total recieved is " + totalMoney;
	
	}
}

public class FactoryTaskConstructor {
	public static void main(String[] args) {
		
		Employee worker1 = new Employee("John", 8, 200);
		System.out.println(worker1.printStatus());
		// worker1.setName("john");
		worker1.recieveSalary(150);
		System.out.println(worker1.printStatus());
		Employee worker2 = new Employee ("Anna", 6, 150);
		System.out.println(worker2.printStatus());
		worker2.recieveSalary(85);
		
	}
}