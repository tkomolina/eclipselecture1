import java.util.Scanner;/*Create a class Factory
which has fields:
 * name, location, workerAmount
has methods:
 * hireNewWorker("Engineer"), it should increase workerAmount by 1 and print out into console information  
 * how many workers there are
 * fireWorker("Plumber") it should decrease workerAmount by 1 and print out into console information 
 *  how many workers there are
 * fireAll()  it should set workerAmount = 0
 * bankrupt() it should call fireAll(),  inform user about current operation and prohibiting 
 * further operation of hire new workers,
 * think about storing some state of factory (edited) */

class Factory {
	String name;
	String location;
	int workerAmount = 10;

	public void setworkerAmount() {
		this.workerAmount = workerAmount;
	}

	public int hireNewWorker() {
		return this.workerAmount;
	}

	public int fireWorker() {
		return this.workerAmount;
	}

	public int fireAll() {
		return this.workerAmount;
	}

	public int bankrupt() {
		return this.workerAmount;
	}
}

public class FactoryTask {
	public static void main(String[] args) {
		Factory Engineer = new Factory();
		Engineer.name = "John";
		Engineer.location = "Riga";
		Scanner scanner = new Scanner(System.in);
		System.out.println("How many workers did we hired? ");
		int hired = scanner.nextInt();
		int workerAmount = 15;
		workerAmount = hired + workerAmount;
		System.out.println("Now we have " + workerAmount + " workers");
		Scanner scanner2 = new Scanner(System.in);
		System.out.println("How many workers did we fired? ");
		int fired = scanner2.nextInt();
		workerAmount = workerAmount - fired;
		System.out.println("Now we have " + workerAmount + " workers");
	}
}
